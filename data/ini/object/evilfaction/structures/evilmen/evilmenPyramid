    DefaultModelConditionState
        Model = hdtemple
    End

    ModelConditionState = JUST_BUILT
        Model = hdtemple_A
    End
    AnimationState            = JUST_BUILT
        StateName                = JustBuilt
        Animation                = hdtemple_A
            AnimationName        = hdtemple_A.hdtemple_A
            AnimationMode        = ONCE
